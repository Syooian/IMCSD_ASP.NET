@{
	ViewData["Title"] = "UploadFile";
}

<h1>UploadFile</h1>

<!--enctype="multipart/form-data"：上傳檔案表單一定要有的屬性-->

<form method="post" action="/FileUpload/UploadFile" enctype="multipart/form-data">
	<p><input type="file" class="form-control" name="Photo" id="Photo" /></p>
	<p><input type="submit" value="上傳" class="btn btn-success" /></p>
</form>

<h3 class="text-danger">@ViewData["ErrorMsg"]</h3>