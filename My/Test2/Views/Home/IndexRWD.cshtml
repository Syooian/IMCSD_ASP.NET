@model IEnumerable<Test2.NightMarket>

@{
	ViewData["Title"] = "IndexRWD";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	@foreach (var Item in Model)
	{
		<div class="col-4">
			<div class="card border-5 shadow mb-3">
				<div class="card-header">
					<h3>@Item.Name</h3>
				</div>

				<a href="https://www.google.com.tw/maps/search/@(Item.Address)" target="_blank" class="btn btn-danger">地圖</a>

				<img src="/images/@(Item.ID).jpg" class="img-fluid" />

			</div>
		</div>
	}
</div>

